<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Select Seats - <%= product.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            height: 100vh;
            color: white;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        .header {
            background: rgba(0,0,0,0.8);
            padding: 6px 10px;
            display: flex;
            align-items: center;
            position: relative;
            flex-shrink: 0;
        }
        
        .back-btn {
            background: none;
            border: none;
            color: white;
            font-size: 16px;
            cursor: pointer;
            margin-right: 6px;
        }
        
        .cinema-logo {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-size: 12px;
            font-weight: bold;
            color: #d4a017;
        }
        
        .movie-info {
            background: rgba(0,0,0,0.6);
            padding: 6px 10px;
            text-align: left;
            flex-shrink: 0;
        }
        
        .movie-title {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 3px;
            text-transform: uppercase;
        }
        
        .show-details {
            font-size: 9px;
            opacity: 0.9;
            margin-bottom: 2px;
        }
        
        .screen-info {
            font-size: 10px;
            font-weight: bold;
            margin-top: 3px;
        }
        
        .seating-area {
            padding: 4px;
            text-align: center;
            background: linear-gradient(180deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
            margin: 3px;
            border-radius: 6px;
            backdrop-filter: blur(10px);
            flex-grow: 1;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }
        
        .screen-indicator {
            background: linear-gradient(45deg, #00bcd4, #0097a7);
            color: white;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 9px;
            font-weight: bold;
            letter-spacing: 1px;
            margin-bottom: 4px;
            box-shadow: 0 2px 6px rgba(0,188,212,0.4);
            flex-shrink: 0;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        
        .seats-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1px;
            flex-grow: 1;
            justify-content: flex-start;
            max-height: calc(100% - 40px);
        }
        
        .seat-row {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1px;
        }
        
        .row-label {
            width: 18px;
            text-align: center;
            font-weight: bold;
            font-size: 9px;
            color: #d4a017;
        }
        
        .seat {
            width: 12px;
            height: 12px;
            border: 1px solid #ccc;
            border-radius: 3px;
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
            background: white;
        }
        
        .seat.available {
            background: white;
            border-color: #ddd;
        }
        
        .seat.available:hover {
            background: #e8f5e8;
            border-color: #4caf50;
            transform: scale(1.1);
        }
        
        .seat.selected {
            background: #4caf50;
            border-color: #4caf50;
            color: white;
            font-weight: bold;
            font-size: 7px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .seat.unavailable {
            background: #9e9e9e;
            border-color: #757575;
            cursor: not-allowed;
        }
        
        .seat.gap {
            background: transparent;
            border: none;
            cursor: default;
        }
        
        .legend {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin: 4px 0;
            font-size: 8px;
            flex-shrink: 0;
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 3px;
        }
        
        .legend-seat {
            width: 8px;
            height: 8px;
            border-radius: 2px;
            border: 1px solid #ddd;
        }
        
        .legend-available { background: white; }
        .legend-selected { background: #4caf50; }
        .legend-unavailable { background: #9e9e9e; }
        
        .booking-summary {
            background: rgba(0,0,0,0.9);
            padding: 4px 8px;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(255,255,255,0.2);
            z-index: 100;
            max-height: 30px;
            flex-shrink: 0;
        }
        
        .selected-seats {
            flex: 1;
            min-width: 0;
        }
        
        .selected-seats > div:first-child {
            font-size: 8px;
            color: #ccc;
            margin-bottom: 1px;
        }
        
        .seat-numbers {
            color: #4caf50;
            font-weight: bold;
            font-size: 9px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .total-amount {
            text-align: center;
            margin: 0 6px;
            min-width: 40px;
        }
        
        .price {
            font-size: 10px;
            font-weight: bold;
            color: #d4a017;
        }
        
        .confirm-btn {
            background: linear-gradient(45deg, #00bcd4, #0097a7);
            color: white;
            padding: 4px 8px;
            border: none;
            border-radius: 10px;
            font-size: 9px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 2px 6px rgba(0,188,212,0.4);
            white-space: nowrap;
        }
        
        .confirm-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,188,212,0.6);
        }
        
        .confirm-btn:disabled {
            background: #666;
            cursor: not-allowed;
            box-shadow: none;
        }
        
        @media (max-width: 768px) {
            .seat {
                width: 14px;
                height: 14px;
                font-size: 7px;
            }
            
            .row-label {
                width: 18px;
                font-size: 9px;
            }
            
            .legend {
                gap: 8px;
                font-size: 8px;
                margin: 3px 0;
            }
            
            .booking-summary {
                padding: 4px 8px;
                max-height: 32px;
            }
            
            .selected-seats > div:first-child {
                font-size: 8px;
            }
            
            .seat-numbers {
                font-size: 9px;
            }
            
            .total-amount {
                margin: 0 6px;
                min-width: 45px;
            }
            
            .price {
                font-size: 10px;
            }
            
            .confirm-btn {
                padding: 4px 8px;
                font-size: 9px;
                border-radius: 10px;
            }
            
            .movie-title {
                font-size: 13px;
            }
            
            .seating-area {
                margin: 3px;
                padding: 4px;
            }
            
            .screen-indicator {
                padding: 4px 12px;
                font-size: 9px;
                margin-bottom: 3px;
            }
            
            .seats-container {
                transform: scale(0.8);
                max-height: calc(100% - 35px);
            }
        }
        
        @media (max-width: 480px) {
            .seat {
                width: 12px;
                height: 12px;
                gap: 1px;
            }
            
            .seat-row {
                gap: 1px;
            }
            
            .row-label {
                width: 16px;
                font-size: 8px;
            }
            
            .booking-summary {
                padding: 4px 6px;
                max-height: 30px;
            }
            
            .selected-seats > div:first-child {
                display: none;
            }
            
            .confirm-btn {
                padding: 4px 6px;
                font-size: 8px;
            }
            
            .price {
                font-size: 9px;
            }
            
            .movie-title {
                font-size: 12px;
            }
            
            .show-details {
                font-size: 9px;
            }
            
            .screen-info {
                font-size: 10px;
            }
            
            .seats-container {
                transform: scale(0.75);
                max-height: calc(100% - 30px);
            }
            
            .legend {
                gap: 6px;
                font-size: 7px;
                margin: 2px 0;
            }
            
            .legend-seat {
                width: 8px;
                height: 8px;
            }
        }
        
        @media (max-height: 600px) and (orientation: landscape) {
            .seating-area {
                margin: 3px;
                padding: 3px;
            }
            
            .booking-summary {
                max-height: 28px;
                padding: 4px 6px;
            }
            
            .seat {
                width: 12px;
                height: 12px;
            }
            
            .row-label {
                font-size: 8px;
            }
            
            .screen-indicator {
                padding: 4px 8px;
                font-size: 8px;
            }
            
            .seats-container {
                transform: scale(0.75);
                max-height: calc(100% - 30px);
            }
        }
        
        @media (min-width: 769px) {
            .header {
                padding: 8px 12px;
            }
            
            .back-btn {
                font-size: 18px;
                margin-right: 8px;
            }
            
            .cinema-logo {
                font-size: 14px;
            }
            
            .movie-info {
                padding: 8px 12px;
            }
            
            .movie-title {
                font-size: 16px;
            }
            
            .show-details {
                font-size: 11px;
            }
            
            .screen-info {
                font-size: 12px;
            }
            
            .seating-area {
                padding: 8px;
                margin: 6px;
                max-height: calc(100vh - 150px);
            }
            
            .screen-indicator {
                padding: 6px 15px;
                font-size: 11px;
                position: static;
            }
            
            .seats-container {
                gap: 3px;
                transform: scale(0.95);
                max-height: calc(100% - 50px);
                overflow: hidden;
            }
            
            .seat {
                width: 16px;
                height: 16px;
                font-size: 8px;
            }
            
            .row-label {
                width: 18px;
                font-size: 9px;
            }
            
            .legend {
                gap: 10px;
                font-size: 9px;
            }
            
            .legend-seat {
                width: 10px;
                height: 10px;
            }
            
            .booking-summary {
                padding: 6px 12px;
                max-height: 40px;
            }
            
            .selected-seats > div:first-child {
                font-size: 9px;
            }
            
            .seat-numbers {
                font-size: 11px;
            }
            
            .total-amount {
                margin: 0 8px;
                min-width: 50px;
            }
            
            .price {
                font-size: 14px;
            }
            
            .confirm-btn {
                padding: 5px 10px;
                font-size: 11px;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <button class="back-btn" onclick="goBack()">&larr;</button>
        <div class="cinema-logo">Galaxy Cinemas</div>
    </div>

    <div class="movie-info">
        <div class="movie-title"><%= product.name %> (<%= product.language || 'TAMIL' %>)</div>
        <div class="show-details" id="formattedDateTime"></div>
        <div class="screen-info">SCREEN <%= screen %></div>
    </div>

    <div class="seating-area">
        <div class="screen-indicator">SCREEN THIS WAY</div>
        
        <div class="seats-container" id="seatsContainer">
            <!-- Seats will be dynamically generated -->
        </div>
        
        <div class="legend">
            <div class="legend-item">
                <div class="legend-seat legend-available"></div>
                <span>Available</span>
            </div>
            <div class="legend-item">
                <div class="legend-seat legend-selected"></div>
                <span>Your Selection</span>
            </div>
            <div class="legend-item">
                <div class="legend-seat legend-unavailable"></div>
                <span>Unavailable</span>
            </div>
        </div>
    </div>

    <div class="booking-summary">
        <div class="selected-seats">
            <div>Selected Seats</div>
            <div class="seat-numbers" id="selectedSeatsDisplay">None selected</div>
        </div>
        <div class="total-amount">
            <div class="price" id="totalPrice">₹0</div>
        </div>
        <button class="confirm-btn" id="confirmBtn" onclick="confirmBooking()" disabled>
            CONFIRM SEATS
        </button>
    </div>

    <script>
        // Seat layout configurations
        const defaultSeatLayout = {
            pricePerSeat: <%= product.price || 150 %>,
            rows: [
                { row: 'A', seats: 21, gaps: [] },
                { row: 'B', seats: 18, gaps: [{ start: 9, size: 3 }] },
                { row: 'C', seats: 18, gaps: [{ start: 9, size: 3 }] },
                {
                    row: 'D',
                    seats: 12,
                    gaps: [
                        { start: 0, size: 3 },
                        { start: 9, size: 3 },
                        { start: 18, size: 3 }
                    ]
                },
                {
                    row: 'E',
                    seats: 12,
                    gaps: [
                        { start: 0, size: 3 },
                        { start: 9, size: 3 },
                        { start: 18, size: 3 }
                    ]
                },
                {
                    row: 'F',
                    seats: 12,
                    gaps: [
                        { start: 0, size: 3 },
                        { start: 9, size: 3 },
                        { start: 18, size: 3 }
                    ]
                },
                { row: 'G', seats: 0, gaps: [] },
                ...Array.from({ length: 10 }, (_, i) => ({
                    row: String.fromCharCode(72 + i),
                    seats: 18,
                    gaps: [{ start: 9, size: 3 }]
                }))
            ]
        };

        const screen2SeatLayout = {
            pricePerSeat: <%= product.price || 150 %>,
            rows: [
                { row: 'A', seats: 17, gaps: [] },
                { row: 'B', seats: 15, gaps: [{ start: 7, size: 2 }] },
                { row: 'C', seats: 15, gaps: [{ start: 7, size: 2 }] },
                {
                    row: 'D',
                    seats: 11,
                    gaps: [
                        { start: 7, size: 2 },
                        { start: 17, size: 8 }
                    ]
                },
                {
                    row: 'E',
                    seats: 11,
                    gaps: [
                        { start: 7, size: 2 },
                        { start: 17, size: 8 }
                    ]
                },
                {
                    row: 'F',
                    seats: 11,
                    gaps: [
                        { start: 7, size: 2 },
                        { start: 17, size: 8 }
                    ]
                },
                { row: 'G', seats: 0, gaps: [] },
                ...Array.from({ length: 10 }, (_, i) => ({
                    row: String.fromCharCode(72 + i),
                    seats: 15,
                    gaps: [{ start: 7, size: 2 }]
                }))
            ]
        };

        // Select layout based on screen
        const screen = '<%= screen %>';
        const seatLayout = screen === '2' ? screen2SeatLayout : defaultSeatLayout;

        const unavailableSeats = <%- JSON.stringify(bookedSeats || []) %>;
        let selectedSeats = [];
        const maxSeats = <%= tickets || 1 %>;

        // Format date and time
        function formatDateTime(dateStr, timeStr) {
            try {
                const date = new Date(dateStr);
                if (isNaN(date.getTime())) {
                    throw new Error('Invalid date format');
                }
                const options = {
                    weekday: 'short',
                    month: 'short',
                    day: '2-digit',
                    year: 'numeric'
                };
                const formattedDate = date.toLocaleDateString('en-US', options)
                    .replace(/,/, '')
                    .replace(/(\w+)\s(\w+)\s(\d+)\s(\d+)/, '$1 $2 $3 $4');
                return `${formattedDate}, ${timeStr}`;
            } catch (e) {
                console.error('Error formatting date:', e);
                return `${dateStr}, ${timeStr}`;
            }
        }

        // Generate seats based on seatLayout
        function generateSeats() {
            const container = document.getElementById('seatsContainer');
            const maxSeatsInRow = Math.max(...seatLayout.rows.map(row => {
                let total = row.seats;
                row.gaps.forEach(gap => total += gap.size);
                return total;
            }));

            seatLayout.rows.forEach(rowConfig => {
                const rowDiv = document.createElement('div');
                rowDiv.className = 'seat-row';
                
                const label = document.createElement('div');
                label.className = 'row-label';
                label.textContent = rowConfig.row;
                rowDiv.appendChild(label);

                if (rowConfig.seats === 0) {
                    container.appendChild(rowDiv);
                    return;
                }

                let seatIndex = 0;
                for (let i = 0; i < maxSeatsInRow; i++) {
                    let isGap = false;
                    for (const gap of rowConfig.gaps) {
                        if (i >= gap.start && i < gap.start + gap.size) {
                            isGap = true;
                            break;
                        }
                    }

                    if (isGap) {
                        const gap = document.createElement('div');
                        gap.className = 'seat gap';
                        rowDiv.appendChild(gap);
                    } else if (seatIndex < rowConfig.seats) {
                        const seatNum = seatIndex + 1;
                        const seatId = `${rowConfig.row}${seatNum}`;
                        const seat = document.createElement('div');
                        seat.className = 'seat';
                        seat.dataset.seatId = seatId;

                        if (unavailableSeats.includes(seatId)) {
                            seat.classList.add('unavailable');
                        } else {
                            seat.classList.add('available');
                            seat.addEventListener('click', () => toggleSeat(seatId));
                        }

                        rowDiv.appendChild(seat);
                        seatIndex++;
                    }
                }

                container.appendChild(rowDiv);
            });
        }

        function toggleSeat(seatId) {
            const seat = document.querySelector(`[data-seat-id="${seatId}"]`);
            const seatIndex = selectedSeats.indexOf(seatId);
            
            if (seatIndex > -1) {
                selectedSeats.splice(seatIndex, 1);
                seat.classList.remove('selected');
                seat.classList.add('available');
                seat.textContent = '';
            } else if (selectedSeats.length < maxSeats) {
                selectedSeats.push(seatId);
                seat.classList.remove('available');
                seat.classList.add('selected');
                seat.textContent = selectedSeats.length;
            }
            
            updateBookingSummary();
        }

        function updateBookingSummary() {
            const selectedSeatsDisplay = document.getElementById('selectedSeatsDisplay');
            const totalPrice = document.getElementById('totalPrice');
            const confirmBtn = document.getElementById('confirmBtn');
            
            if (selectedSeats.length === 0) {
                selectedSeatsDisplay.textContent = 'None selected';
                totalPrice.textContent = '₹0';
                confirmBtn.disabled = true;
            } else {
                selectedSeatsDisplay.textContent = selectedSeats.sort().join(', ');
                totalPrice.textContent = `₹${selectedSeats.length * seatLayout.pricePerSeat}`;
                confirmBtn.disabled = selectedSeats.length !== maxSeats;
            }
        }

        function confirmBooking() {
            if (selectedSeats.length !== maxSeats) {
                alert(`Please select exactly ${maxSeats} seat(s)`);
                return;
            }

            const productId = '<%= product._id %>';
            const bookingData = {
                name: '<%= product.name %>',
                time: '<%= time %>',
                date: '<%= date %>',
                screen: '<%= screen %>',
                selectedSeats: JSON.stringify(selectedSeats),
                totalAmount: selectedSeats.length * seatLayout.pricePerSeat
            };
            
            const params = new URLSearchParams(bookingData);
            window.location.href = `/orderSummary/${productId}?${params.toString()}`;
        }

        function goBack() {
            window.history.back();
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('formattedDateTime').textContent = formatDateTime('<%= date %>', '<%= time %>');
            generateSeats();
        });

       window.addEventListener("pageshow", function (event) {
    // Check if payment is done OR failed
    const paymentDone = sessionStorage.getItem("paymentDone");

    if (paymentDone === "true") {
        // If the user tries to navigate back, redirect to home
        if (
            event.persisted || 
            (window.performance && window.performance.getEntriesByType("navigation")[0].type === "back_forward")
        ) {
            window.location.replace("/");
        }
    }
});


    </script>
</body>
</html>