        document.getElementById("forgotPasswordForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const email = document.getElementById("email").value;
    const submitBtn = document.querySelector("#forgotPasswordForm button[type='submit']");

    if (!email) {
        Swal.fire("Error", "Please enter your email!", "error");
        return;
    }

    // ✅ Disable button to prevent multiple requests
    submitBtn.disabled = true;
    submitBtn.innerText = "Sending OTP...";

    try {
        const res = await fetch("/forget-password", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email })
        });

        const data = await res.json();

        if (data.success) {
            Swal.fire("Success", "OTP sent to your email!", "success")
                .then(() => {
                    window.location.href = "/verify-otp-forgot"; // Redirect to verify OTP page
                });
        } else {
            Swal.fire("Error", data.message, "error");
        }
    } catch (error) {
        Swal.fire("Error", "Something went wrong. Please try again!", "error");
    } finally {
        // ✅ Re-enable button if needed
        submitBtn.disabled = false;
        submitBtn.innerText = "Send OTP";
    }
});

