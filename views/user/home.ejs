<% if (user) { %>
<li>
  <form action="/logout" method="POST" style="display:inline;">
    <button type="submit" style="background:none;border:none;cursor:pointer;">
      <i class="fas fa-sign-out-alt"></i> Logout
    </button>
  </form>
</li>
<% } %>


        </ul>
        <div class="sidebar-footer">
            <div class="footer-icon"><i class="fas fa-info-circle"></i></div>
            <div class="footer-icon"><i class="fas fa-phone"></i></div>
            <div class="footer-icon"><i class="fas fa-file-alt"></i></div>
            <div class="footer-icon"><i class="fas fa-cog"></i></div>
        </div>
    </div>
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <!-- Main content -->
    <div class="header">
        <div class="menu-button" id="menu-button">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <div class="logo">
            <!-- Logo will go here -->
            <img src="/images/logo.png" alt="Cinema Logo">
        </div>
        <div class="search-icon">
            <i class="fas fa-search"></i>
        </div>
    </div>

    <div class="tabs">
        <div class="tab active" data-status="Running">NOW RUNNING</div>
        <div class="tab" data-status="Upcoming">UPCOMING</div>
    </div>

    <div class="theater-info" style="background-color: #666; color: white; padding: 10px; white-space: nowrap; overflow-x: auto;">
        MY CINEMAS A/C 4K DOLBY ATMOS : WISHING YOU A BETTER EXPERIENCE
    </div>

    <!-- Now Running Movies Container -->
    <div class="movies-container" id="running-movies">
    <% const runningMovies = products.filter(product => product.status === 'Running'); %>

    <% if (runningMovies.length > 0) { %>
        <% runningMovies.forEach(product => { %>
            <div class="movie-card">
                     <div class="movie-poster">
                          <% if (product.images && product.images.length > 0) { %>
                            <a href="/movies/<%= product._id %>">
                            <img src="/<%= product.images[0] %>" alt="<%= product.name %> poster" />
                            </a>
                      <% } else { %>
                      <a href="/movies/<%= product._id %>">
                     <div class="no-image">No Image</div>
                      </a>
                     <% } %>
                     <div class="movie-rating">★</div>
                     </div>

                <div class="movie-info">
                    <div class="movie-title"><%= product.name %></div>
                    <div class="movie-language"><%= product.language %></div>
                    <button class="book-button" onclick="location.href='/setTime/<%= product._id %>'">BOOK</button>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="no-movies">No movies currently running.</div>
    <% } %>
</div>


    <!-- Upcoming Movies Container -->
    <div class="movies-container hidden" id="upcoming-movies">
        <% 
        const upcomingMovies = products.filter(product => product.status === 'Upcoming');
        upcomingMovies.forEach(product => { 
        %>
            <div class="movie-card">
                <div class="movie-poster">
                    <% if (product.images && product.images.length > 0) { %>
                        <img src="/<%= product.images[0] %>" alt="<%= product.name %> poster" />
                    <% } else { %>
                        <div class="no-image">No Image</div>
                    <% } %>
                    <div class="movie-rating">★</div>
                </div>
                <div class="movie-info">
                    <div class="movie-title"><%= product.name %></div>
                    <div class="movie-language"><%= product.language %> 
                         <!-- <%= product.description %> -->
                        </div>
                    <!-- <button class="book-button">BOOK</button> -->
                </div>
            </div>
        <% }); %>
        <% if (upcomingMovies.length === 0) { %>
            <div class="no-movies">No upcoming movies.</div>
        <% } %>
    </div>

    <script>
        // JavaScript for sidebar toggle
        document.addEventListener('DOMContentLoaded', function() {
            const menuButton = document.getElementById('menu-button');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebar-overlay');
            const tabs = document.querySelectorAll('.tab');
            const runningMovies = document.getElementById('running-movies');
            const upcomingMovies = document.getElementById('upcoming-movies');

            // Sidebar functionality
            menuButton.addEventListener('click', function() {
                sidebar.classList.add('active');
                overlay.style.display = 'block';
            });

            overlay.addEventListener('click', function() {
                sidebar.classList.remove('active');
                overlay.style.display = 'none';
            });

            // Tab switching functionality
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active class from all tabs
                    tabs.forEach(t => t.classList.remove('active'));
                    
                    // Add active class to clicked tab
                    this.classList.add('active');
                    
                    // Get the status from data attribute
                    const status = this.getAttribute('data-status');
                    
                    // Show/hide movie containers based on status
                    if (status === 'Running') {
                        runningMovies.classList.remove('hidden');
                        upcomingMovies.classList.add('hidden');
                    } else if (status === 'Upcoming') {
                        runningMovies.classList.add('hidden');
                        upcomingMovies.classList.remove('hidden');
                    }
                });
            });
        });

        // Function to handle movie booking
        function bookMovie(link) {
            if (link) {
                window.open(link, '_blank');
            } else {
                alert('Booking link not available');
            }
        }
    </script>
</body>
</html>